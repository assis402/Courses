@model Courses.ViewModels.InsertUpgradeViewModel

@{
    ViewData["Title"] = "Nova atualização";
}
<p></p>
<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="title"><i class="fas fa-clipboard-check"></i> &nbsp; <b>Registrar atualização</b></h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="InsertUpgrade">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="fields">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Título</label>
                            <input asp-for="Title" class="form-control form-control-lg" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>         

                    <div class="fields">
                        <div class="form-group">
                            <label asp-for="FeaturesId" class="control-label">Recursos Desenvolvidos</label>
                            <select asp-for="FeaturesId" class="selectpicker"  data-width="100%" asp-items="ViewBag.FeaturesId" multiple data-live-search="true">
                            </select>
                            <span class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group buttons">
                        <input type="submit" value="Registrar" class="btn btn-outline-success btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $('select').selectpicker();
</script>