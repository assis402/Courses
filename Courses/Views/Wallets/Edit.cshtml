@model Courses.Models.Wallet

@{
    ViewData["Title"] = "Editando carteira" + Model.User.Nome;

}
<p></p>
<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="title"><i class="fas fa-money-bill-alt fa-lg"></i> &nbsp; <b>Editar saldo:</b> &nbsp @Model.User.Nome</h3>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="WalletId" />

                    <div class="fields">
                        <div class="form-group">
                            <label asp-for="Balance" class="control-label">Descrição</label>
                            <input asp-for="Balance" class="form-control form-control-lg" />
                            <span asp-validation-for="Balance" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group buttons">
                        <input type="submit" value="Editar" class="btn btn-outline-info btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                    <p></p>


                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
