@model IEnumerable<Courses.Models.Wallet>

@{
    ViewData["Title"] = "Carteiras";
    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
}

<p></p>
<div class="border border-light rounded shadow">
    <div class="container">
        <h3 class="title">
            <i class="fas fa-user-lock fa-lg"></i> &nbsp; <b>Carteiras</b> &nbsp;
            <a asp-action="Create" class="btn btn-outline-secondary btn-lg" data-toggle="tooltip" data-placement="right" title="Nova carteira"><i class="fas fa-plus-circle fa-lg"></i></a>
        </h3>

        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th scope="col">
                        Usuário
                    </th>
                    <th scope="col">
                        Saldo
                    </th>
                    <th scope="col">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.WalletId" class="btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Editar carteira"><i class="far fa-edit"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<partial name="_ModalDeletion" />

@section Scripts{

    <script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
    </script>

}

