@model Courses.Models.AccessLevels

@{
    ViewData["Title"] = "Atualizar nível de acesso" + Model.Name;
}

<p></p>
<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="title"><i class="fas fa-user-lock fa-lg"></i> &nbsp; <b>Atualizar nível de acesso:</b> &nbsp @Model.Name</h3>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="fields">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Nome</label>
                            <input asp-for="Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="fields">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Descrição</label>
                            <textarea asp-for="Description" class="form-control form-control-lg"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group buttons">
                        <input type="submit" value="Create" class="btn btn-outline-info btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                    <p></p>


                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
