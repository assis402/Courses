@model Courses.Models.Course

@{
    ViewData["Title"] = "Editar curso";
}
<p></p>
<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="title"><i class="fas fa-user-lock fa-lg"></i> &nbsp; <b>Atualizar curso: @Model.Nome</b></h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CourseId" />
                    <div class="row">
                        <div class="col-6">
                            <div class="fields">
                                <div class="form-group">
                                    <label asp-for="Nome" class="control-label">Nome</label>
                                    <input asp-for="Nome" class="form-control form-control-lg" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="fields">
                                <div class="form-group">
                                    <label asp-for="CargaHoraria" class="control-label">Carga horária</label>
                                    <input asp-for="CargaHoraria" class="form-control form-control-lg" />
                                    <span asp-validation-for="CargaHoraria" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="fields">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Descrição</label>
                                    <textarea asp-for="Description" class="form-control form-control-lg"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="fields">
                                <div class="form-group">
                                    <label asp-for="Preco" class="control-label">Preço</label>
                                    <input asp-for="Preco" class="form-control form-control-lg" />
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group fields">
                                @if (Model.Foto != null)
                                {
                                    <img src="@Url.Content(Model.Foto)" name="file" id="file" height="300" width="300" class="border border-secondary rounded" />
                                }

                                else
                                {
                                    <img src="#" name="file" id="file" height="300" width="300" class="border border-secondary rounded" />
                                }
                            </div>
                            <div class="fields">
                                <div class="form-group">
                                    <label asp-for="Foto" class="control-label"></label>
                                    <input asp-for="Foto" type="file" class="form-control-file form-control-lg" name="file" id="file" onchange="LoadImage(this)" />
                                    <span asp-validation-for="Foto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group buttons">
                        <input type="submit" value="Create" class="btn btn-outline-success btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function LoadImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $("#file").attr('src', e.target.result).width(300).height(300);
                }
            }
            reader.readAsDataURL(input.files[0]);
        }
    </script>
}